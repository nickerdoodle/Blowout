<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title BlowOut Musical Instrument Rentals</title>


    
    <link href="~/Content/bootstrap.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" type="text/css" rel="stylesheet" />
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.5.0/css/all.css' integrity='sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU' crossorigin='anonymous'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/Site.css" type="text/css" rel="stylesheet" />
    <link href="~/Content/MyStyles.css" type="text/css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-top:0px; margin-top:0px">


    <div class="w3-sidebar w3-bar-block w3-green w3-xxlarge" style="width:70px">
        <a href="@Url.Action("Index","Home")" class="w3-bar-item w3-button"><i class="fa fa-home"></i></a>
        <a href="https://www.google.com/" class="w3-bar-item w3-button"><i class="fa fa-search"></i></a>
        <a href="https://www.spotify.com/us/" class="w3-bar-item w3-button"><i class="fas fa-music"></i></a>
        <a href="https://maps.google.com/" class="w3-bar-item w3-button"><i class="fa fa-globe"></i></a>
        <a href="@Url.Action("UpdateData","Update")" class="w3-bar-item w3-button"><i class="far fa-edit"></i></a>
        
    </div>

    

        <div class="w3-container" style="padding:0px">
            <div class="navbar navbar-expand-lg navbar-light bg-light navbar-fixed-top ">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("BlowOut Instrument Rentals", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "font-weight:800; color:green" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Rentals", "Rentals", "Home", null, new { @class = "btn btn-light myFooterText", style="font-weight:800" })</li>
                            <li>@Html.ActionLink("About", "About", "Home", null, new { @class = "btn btn-light myFooterText", style = "font-weight:800" })</li>
                            <li>@Html.ActionLink("Contact", "Index", "Contact", null, new { @class = "btn btn-light myFooterText", style = "font-weight:800" })</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    <p class="myFooterText">&copy; @DateTime.Now.Year - BlowOut Instrument Rentals</p>
                </footer>
            </div>
        </div>

    



    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/MyJavaScript.js" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
